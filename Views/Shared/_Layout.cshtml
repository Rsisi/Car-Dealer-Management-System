<script>

 

    priceelelist = document.getElementsByClassName("price");
    for (index = 0; index < priceelelist.length; ++index) {
        priceelelist[index].setAttribute("oninput", "validate2decimals(this)")
    }

    intnumberlist = document.getElementsByClassName("intnumber");
    for (index = 0; index < intnumberlist.length; ++index) {
        intnumberlist[index].setAttribute("onkeypress", "validateintnumber(this)")
    }


    var validate2decimals = function (e) {
        var t = e.value;
        e.value = (t.indexOf(".") >= 0) ? (t.substr(0, t.indexOf(".")) + t.substr(t.indexOf("."), 3)) : t;
    }

    var validateintnumber = function (e) {
        e.value = Math.round(e.value);
    }
  
</script>